<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/home" >

        <ImageView
            android:id="@+id/img_advert"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/advert" />

        <ImageView
            android:id="@+id/btn_feed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="140dp"
            android:src="@drawable/news" />

        <ImageView
            android:id="@+id/btn_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_alignLeft="@+id/btn_feed"
            android:layout_below="@+id/btn_feed"
            android:layout_marginTop="30dp"
            android:src="@drawable/events" />

        <ImageView
            android:id="@+id/btn_preferences"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btn_event"
            android:layout_below="@+id/btn_event"
            android:padding="10dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/settings" />

        <ImageView
            android:id="@+id/btn_aboutObliquity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btn_preferences"
            android:layout_below="@+id/btn_preferences"
            android:padding="10dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/about" />

    </RelativeLayout>
